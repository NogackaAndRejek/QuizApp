<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true">

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".QuizActivity"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:elevation="4dp"
            android:padding="16dp">
            <TableRow
                android:weightSum="3"
                android:layout_width="match_parent">
                <TextView
                    style="@style/TextStateBarInQuiz"
                    android:text="16"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:id="@+id/question_number_text_view"
                    style="@style/TextStateBarInQuiz"
                    android:text="16/20"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:id="@+id/timer_text_view"
                    android:text="03s"
                    style="@style/TextStateBarInQuiz"
                    android:textColor="@android:color/white"/>
            </TableRow>

        </TableLayout>

        <ImageView
            android:id="@+id/question_image_view"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:clickable="false"
            android:cropToPadding="false"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_question_image"
            />

        <TextView
            android:id="@+id/question_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sample_question"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp"
            android:textAlignment="center"
            style="@style/TextInQuiz"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow>
                <Button
                    android:id="@+id/answer_a"
                    android:text="@string/sample_answer_a"
                    style="@style/AnswerButton"/>

                <Button
                    android:id="@+id/answer_b"
                    android:text="@string/sample_answer_b"
                    style="@style/AnswerButton"/>
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/answer_c"
                    android:text="@string/sample_answer_c"
                    style="@style/AnswerButton"/>

                <Button
                    android:id="@+id/answer_d"
                    android:text="@string/sample_answer_d"
                    style="@style/AnswerButton"/>

            </TableRow>

        </TableLayout>

    </LinearLayout>

</ScrollView>